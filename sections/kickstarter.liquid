<style type="text/css">
	* {
	    box-sizing: border-box;
	}

	/* Create three columns of equal width */
	.columns {
	    float: left;
	    width: 25%;
	    padding: 8px;
	}

	/* Style the list */
	.price {
	    list-style-type: none;
	    border: 1px solid #eee;
	    background-color: #EAF2F8;
	    margin: 0;
	    padding: 0;
	    -webkit-transition: 0.3s;
	    transition: 0.3s;
	    color: white;
	}

	li{
		margin-bottom:0px;
	}

	/* Add shadows on hover */
	.price:hover {
	    box-shadow: 0 8px 12px 0 rgba(0,0,0,0.2)
	}

	/* Pricing header */
	.price .header {
	    font-size: 25px;
	}

	/* List items */
	.price li {
	    border-bottom: 1px solid #4A8CCB;
	    padding: 20px;
	    text-align: center;
	    background-color: #4A8CCB;
	    color: white;
	}

	/* Light Grey list item */
	.price .price-tag {
	    background-color: #3A7AB8;
	    font-size: 20px;
	}

	/* Style the list */
	.price-imp {
	    list-style-type: none;
	    border: 1px solid #eee;
	    background-color: #5CA3E2;
	    margin: 0;
	    padding: 0;
	    -webkit-transition: 0.3s;
	    transition: 0.3s;
	    color: white;
	}

	/* Add shadows on hover */
	.price-imp:hover {
	    box-shadow: 0 8px 12px 0 rgba(0,0,0,0.2)

	}

	/* Pricing header */
	.price-imp .header {
	    font-size: 25px;
	}

	/* List items */
	.price-imp li {
	    border-bottom: 1px solid #5CA3E2;
	    padding: 20px;
	    text-align: center;
	    background-color: #5CA3E2;
	    color: white;
	}

	.price-imp .price-tag {
	    background-color: #3A7AB8;
	    font-size: 20px;
	}


	/* The "Buy Now" button */
	.button {
	    background-color: white;
	    border: none;
	    color: #4A8CCB;
	    padding: 10px 25px;
	    text-align: center;
	    text-decoration: none;
	    font-size: 18px;
	}

	.btn-imp{
		background-color: #4A8CCB;
	    border: none;
	    color: white;
	    padding: 10px 25px;
	    text-align: center;
	    text-decoration: none;
	    font-size: 18px;
	}

	.img-icon {
	    float: left;
	    clear: both;
	}


	/* Change the width of the three columns to 100% 
	(to stack horizontally on small screens) */
	@media only screen and (max-width: 600px) {
	    .columns {
	        width: 100%;
	    }
	}
</style>
